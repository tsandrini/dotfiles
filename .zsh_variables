# vim: filetype=zsh

PATH="$PATH:/usr/lib/eclipse/plugins/org.eclim_2.8.0/bin/"
PATH="$PATH:$HOME/.local/bin"

export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share
export XDG_BIN_HOME=$HOME/.local/bin

export EDITOR=nvim
export VISUAL=nvim
export DISPLAY=:0

export MUSIC_DIR=$HOME/Hudba/
export MOVIES_DIR=$HOME/Movies/
export PROJECTS_DIR=$HOME/Projekty/
export DOSU_DIR=$HOME/DosuNotes/
export VIDS_DIR=$HOME/Videa/
export PICS_DIR=$HOME/Pictures/
export WALLPAPERS_DIR=$HOME/Pictures/Wallpapers/
export DOCUMENTS_DIR=$HOME/Documents/
export DOWNLOADS_DIR=$HOME/Downloads/
